~/.bashrc

export EDITOR='nano'
export VISUAL='nano'
alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'
alias remove='sudo apt-get auto-remove'

updateupgrade() {
        builtin sudo apt-get update "$*" && sudo apt-get upgrade
}
alias kmykohuu='updateupgrade'

cdls() {
        builtin cd "$*" && ls
}
alias cd='cdls'

source .bashrc
